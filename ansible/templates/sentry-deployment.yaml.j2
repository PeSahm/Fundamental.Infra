    metadata:
      labels:
        app: sentry-snuba-api
    spec:
      containers:
        - name: snuba
          image: {{ sentry_image_registry }}/snuba:{{ sentry_version }}
          command: ["snuba", "api"]
          env:
            - name: SNUBA_SETTINGS
              value: "self_hosted"
            - name: CLICKHOUSE_HOST
              value: "sentry-clickhouse"
            - name: DEFAULT_BROKERS
              value: "sentry-kafka:9092"
            - name: REDIS_HOST
              value: "sentry-redis"
            - name: REDIS_PASSWORD
