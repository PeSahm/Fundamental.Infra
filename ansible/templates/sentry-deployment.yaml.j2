            - containerPort: 9000
              name: native
          volumeMounts:
            - name: clickhouse-data
              mountPath: /var/lib/clickhouse
            - name: clickhouse-users
              mountPath: /etc/clickhouse-server/users.d/default.xml
              subPath: clickhouse-users.xml
          resources:
            requests:
              cpu: 200m
              memory: 1Gi
            limits:
              cpu: 1000m
              memory: 2Gi
      volumes:
        - name: clickhouse-data
          persistentVolumeClaim:
            claimName: sentry-clickhouse-pvc
        - name: clickhouse-users
          configMap:
            name: sentry-config
            items:
              - key: clickhouse-users.xml
                path: clickhouse-users.xml
---
apiVersion: v1
kind: Service
metadata:
  name: sentry-clickhouse
  namespace: {{ sentry_namespace }}
spec:
  selector:
    app: sentry-clickhouse
  ports:
    - name: http
      port: 8123
      targetPort: 8123
