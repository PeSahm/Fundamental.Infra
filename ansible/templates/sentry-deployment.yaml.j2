  name: sentry-clickhouse
  namespace: {{ sentry_namespace }}
  labels:
    app: sentry-clickhouse
    app.kubernetes.io/part-of: sentry
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sentry-clickhouse
  template:
    metadata:
      labels:
        app: sentry-clickhouse
    spec:
      containers:
        - name: clickhouse
          image: altinity/clickhouse-server:25.3.6.10034.altinitystable
          env:
            - name: CLICKHOUSE_DB
