# =============================================================================
# Zookeeper (for Kafka)
# =============================================================================
# Zookeeper stores cluster state and coordinates Kafka brokers.
# IMPORTANT: Both data and datalog directories must be persisted to prevent
# cluster ID mismatch errors after restarts.
# =============================================================================
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: sentry-zookeeper
  namespace: {{ sentry_namespace }}
  labels:
    app: sentry-zookeeper
    app.kubernetes.io/part-of: sentry
spec:
  replicas: 1
  strategy:
    type: Recreate  # Prevent multiple instances accessing same PVC
  selector:
    matchLabels:
      app: sentry-zookeeper
  template:
    metadata:
      labels:
        app: sentry-zookeeper
    spec:
      containers:
        - name: zookeeper
          image: confluentinc/cp-zookeeper:7.5.0
          env:
            - name: ZOOKEEPER_CLIENT_PORT
              value: "2181"
            - name: ZOOKEEPER_TICK_TIME
              value: "2000"
            # Persist data and transaction logs to same PVC
            - name: ZOOKEEPER_DATA_DIR
              value: "/var/lib/zookeeper/data"
            - name: ZOOKEEPER_DATA_LOG_DIR
              value: "/var/lib/zookeeper/data/log"
            # Snapshot retention (keep last 3)
            - name: ZOOKEEPER_AUTOPURGE_SNAP_RETAIN_COUNT
              value: "3"
            - name: ZOOKEEPER_AUTOPURGE_PURGE_INTERVAL
              value: "24"
            # Enable 4-letter word commands for health checks (ruok)
            - name: KAFKA_OPTS
              value: "-Dzookeeper.4lw.commands.whitelist=*"
          ports:
            - containerPort: 2181
              name: client
          livenessProbe:
            exec:
              command:
                - sh
                - -c
                - "echo ruok | nc localhost 2181 | grep imok"
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3
          readinessProbe:
            exec:
              command:
                - sh
                - -c
                - "echo ruok | nc localhost 2181 | grep imok"
            initialDelaySeconds: 10
            periodSeconds: 5
            timeoutSeconds: 5
          volumeMounts:
            - name: zookeeper-data
              mountPath: /var/lib/zookeeper/data
          resources:
            requests:
              cpu: 100m
              memory: 256Mi
            limits:
              cpu: 500m
              memory: 512Mi
      volumes:
        - name: zookeeper-data
          persistentVolumeClaim:
            claimName: sentry-zookeeper-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: sentry-zookeeper
  namespace: {{ sentry_namespace }}
spec:
  selector:
    app: sentry-zookeeper
  ports:
    - port: 2181
      targetPort: 2181

# =============================================================================
# Kafka
# =============================================================================
# Kafka handles event streaming for Sentry.
# IMPORTANT: The meta.properties file in the log directory stores the cluster ID.
# If Zookeeper loses its data, Kafka will fail with InconsistentClusterIdException.
# The watchdog service handles this by clearing meta.properties automatically.
# =============================================================================
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: sentry-kafka
  namespace: {{ sentry_namespace }}
  labels:
    app: sentry-kafka
    app.kubernetes.io/part-of: sentry
spec:
  replicas: 1
  strategy:
    type: Recreate  # Prevent multiple instances accessing same PVC
  selector:
    matchLabels:
      app: sentry-kafka
  template:
    metadata:
      labels:
        app: sentry-kafka
    spec:
      # Wait for Zookeeper to be available before starting Kafka
      initContainers:
        - name: wait-for-zookeeper
          image: busybox:1.36
          command:
            - sh
            - -c
            - |
              echo "Waiting for Zookeeper..."
              until nc -z sentry-zookeeper 2181; do
                echo "Zookeeper not ready, waiting..."
                sleep 5
              done
              echo "Zookeeper is ready!"
      containers:
        - name: kafka
          image: confluentinc/cp-kafka:7.5.0
          env:
            - name: KAFKA_BROKER_ID
              value: "1"
            - name: KAFKA_ZOOKEEPER_CONNECT
              value: "sentry-zookeeper:2181"
            - name: KAFKA_ADVERTISED_LISTENERS
              value: "PLAINTEXT://sentry-kafka:9092"
            - name: KAFKA_LISTENER_SECURITY_PROTOCOL_MAP
              value: "PLAINTEXT:PLAINTEXT"
            - name: KAFKA_INTER_BROKER_LISTENER_NAME
              value: "PLAINTEXT"
            - name: KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR
              value: "1"
            # Log retention settings
            - name: KAFKA_LOG_RETENTION_HOURS
              value: "24"
            - name: KAFKA_LOG_RETENTION_BYTES
              value: "1073741824"  # 1GB per partition
            - name: KAFKA_LOG_SEGMENT_BYTES
              value: "268435456"   # 256MB segments
            # Log directory (must match volume mount)
            - name: KAFKA_LOG_DIRS
              value: "/var/lib/kafka/data"
            # Graceful shutdown
            - name: KAFKA_CONTROLLED_SHUTDOWN_ENABLE
              value: "true"
            - name: KAFKA_CONTROLLED_SHUTDOWN_MAX_RETRIES
              value: "3"
          ports:
            - containerPort: 9092
              name: kafka
          livenessProbe:
            tcpSocket:
              port: 9092
            initialDelaySeconds: 60
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 6
          readinessProbe:
            tcpSocket:
              port: 9092
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3
          volumeMounts:
            - name: kafka-data
              mountPath: /var/lib/kafka/data
          resources:
            requests:
              cpu: 200m
              memory: 512Mi
            limits:
              cpu: 1000m
              memory: 1Gi
          # Graceful termination to allow controlled shutdown
          lifecycle:
            preStop:
              exec:
                command:
                  - sh
                  - -c
                  - "sleep 10"
      terminationGracePeriodSeconds: 60
      volumes:
        - name: kafka-data
          persistentVolumeClaim:
            claimName: sentry-kafka-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: sentry-kafka
  namespace: {{ sentry_namespace }}
spec:
  selector:
    app: sentry-kafka
  ports:
    - port: 9092
      targetPort: 9092

