apiVersion: v1
kind: Service
metadata:
  name: sentry-redis
  namespace: {{ sentry_namespace }}
spec:
  selector:
    app: sentry-redis
  ports:
    - port: 6379
      targetPort: 6379

# =============================================================================
# Kafka (KRaft mode - no Zookeeper)
# =============================================================================
# Kafka uses KRaft (Kafka Raft) mode for self-managed metadata.
# Zookeeper was removed in Sentry 25.1.0.
# =============================================================================
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: sentry-kafka
  namespace: {{ sentry_namespace }}
  labels:
    app: sentry-kafka
    app.kubernetes.io/part-of: sentry
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: sentry-kafka
  template:
    metadata:
      labels:
        app: sentry-kafka
    spec:
      containers:
        - name: kafka
          image: confluentinc/cp-kafka:7.6.6
          env:
            # KRaft mode configuration (no Zookeeper)
            - name: CLUSTER_ID
              value: "MkU3OEVBNTcwNTJENDM2Qk"
            - name: KAFKA_NODE_ID
              value: "1"
            - name: KAFKA_PROCESS_ROLES
              value: "broker,controller"
            - name: KAFKA_LISTENERS
              value: "PLAINTEXT://0.0.0.0:9092,CONTROLLER://0.0.0.0:9093"
            - name: KAFKA_ADVERTISED_LISTENERS
              value: "PLAINTEXT://sentry-kafka:9092"
            - name: KAFKA_CONTROLLER_LISTENER_NAMES
              value: "CONTROLLER"
            - name: KAFKA_LISTENER_SECURITY_PROTOCOL_MAP
              value: "CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT"
            - name: KAFKA_CONTROLLER_QUORUM_VOTERS
              value: "1@localhost:9093"
            - name: KAFKA_INTER_BROKER_LISTENER_NAME
              value: "PLAINTEXT"
            - name: KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR
              value: "1"
            # Log retention settings
            - name: KAFKA_LOG_RETENTION_HOURS
              value: "24"
            - name: KAFKA_LOG_RETENTION_BYTES
              value: "1073741824"
            - name: KAFKA_LOG_SEGMENT_BYTES
              value: "268435456"
            - name: KAFKA_LOG_DIRS
              value: "/var/lib/kafka/data"
            # Graceful shutdown
            - name: KAFKA_CONTROLLED_SHUTDOWN_ENABLE
              value: "true"
            - name: KAFKA_CONTROLLED_SHUTDOWN_MAX_RETRIES
              value: "3"
          ports:
            - containerPort: 9092
              name: kafka
            - containerPort: 9093
              name: controller
          # Startup probe: gives Kafka up to 5 min to start (KRaft init can be slow)
          startupProbe:
            tcpSocket:
              port: 9092
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 30
          livenessProbe:
            tcpSocket:
              port: 9092
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 6
          readinessProbe:
            tcpSocket:
              port: 9092
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3
          volumeMounts:
            - name: kafka-data
              mountPath: /var/lib/kafka/data
          resources:
            requests:
              cpu: 200m
              memory: 512Mi
            limits:
              cpu: 1000m
              memory: 1536Mi
          lifecycle:
            preStop:
              exec:
                command:
                  - sh
                  - -c
                  - "sleep 10"
      terminationGracePeriodSeconds: 60
      volumes:
        - name: kafka-data
          persistentVolumeClaim:
            claimName: sentry-kafka-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: sentry-kafka
  namespace: {{ sentry_namespace }}
spec:
  selector:
    app: sentry-kafka
  ports:
    - port: 9092
      targetPort: 9092

