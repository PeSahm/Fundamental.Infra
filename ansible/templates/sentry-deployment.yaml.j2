# =============================================================================
# Sentry Web (Main Application)
# =============================================================================
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: sentry-web
  namespace: {{ sentry_namespace }}
  labels:
    app: sentry-web
    app.kubernetes.io/part-of: sentry
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sentry-web
  template:
    metadata:
      labels:
        app: sentry-web
    spec:
      containers:
        - name: sentry
          image: getsentry/sentry:{{ sentry_version }}
          command: ["sentry", "run", "web"]
          env:
            - name: SENTRY_SECRET_KEY
              valueFrom:
                secretKeyRef:
                  name: sentry-secrets
                  key: secret-key
            - name: POSTGRES_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: sentry-secrets
                  key: postgres-password
            - name: REDIS_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: sentry-secrets
                  key: redis-password
            - name: SENTRY_POSTGRES_HOST
              value: "sentry-postgres"
            - name: SENTRY_REDIS_HOST
              value: "sentry-redis"
            - name: SNUBA
              value: "http://sentry-snuba-api:1218"
            - name: SENTRY_RELAY_HOST
              value: "sentry-relay"
            - name: SENTRY_SYMBOLICATOR_URL
              value: "http://sentry-symbolicator:3021"
            - name: SENTRY_VROOM_URL
              value: "http://sentry-vroom:8085"
            - name: KAFKA_CLUSTERS
              value: '{"default": {"bootstrap.servers": "sentry-kafka:9092"}}'
          ports:
            - containerPort: 9000
          volumeMounts:
            - name: sentry-files
              mountPath: /data/files
            - name: sentry-config
              mountPath: /etc/sentry/sentry.conf.py
              subPath: sentry.conf.py
            - name: sentry-config
              mountPath: /etc/sentry/config.yml
              subPath: config.yml
          resources:
            requests:
              cpu: 200m
              memory: 512Mi
            limits:
              cpu: 1000m
              memory: 1Gi
          readinessProbe:
            httpGet:
              path: /_health/
              port: 9000
            initialDelaySeconds: 10
            periodSeconds: 10
          livenessProbe:
            httpGet:
              path: /_health/
              port: 9000
            initialDelaySeconds: 30
            periodSeconds: 10
      volumes:
        - name: sentry-files
          persistentVolumeClaim:
            claimName: sentry-files-pvc
        - name: sentry-config
          configMap:
            name: sentry-config
---
apiVersion: v1
kind: Service
metadata:
  name: sentry-web
  namespace: {{ sentry_namespace }}
spec:
  selector:
    app: sentry-web
  ports:
    - port: 9000
      targetPort: 9000

