# =============================================================================
# Vroom (Session Replay & Profiling)
# =============================================================================
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: sentry-vroom
  namespace: {{ sentry_namespace }}
  labels:
    app: sentry-vroom
    app.kubernetes.io/part-of: sentry
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sentry-vroom
  template:
    metadata:
      labels:
        app: sentry-vroom
    spec:
      initContainers:
        - name: create-profiles-dir
          image: busybox:1.36
          command: ["mkdir", "-p", "/var/vroom/sentry-profiles"]
          volumeMounts:
            - name: vroom-profiles
              mountPath: /var/vroom/sentry-profiles
      containers:
        - name: vroom
          image: {{ sentry_image_registry }}/vroom:{{ sentry_version }}
          env:
            - name: SENTRY_KAFKA_BROKERS_PROFILING
              value: "sentry-kafka:9092"
            - name: SENTRY_KAFKA_BROKERS_OCCURRENCES
              value: "sentry-kafka:9092"
            - name: SENTRY_KAFKA_BROKERS_SPANS
              value: "sentry-kafka:9092"
            - name: SENTRY_SNUBA_HOST
              value: "http://sentry-snuba-api:1218"
            - name: SENTRY_BUCKET_PROFILES
              value: "file:///var/vroom/sentry-profiles"
          ports:
            - containerPort: 8085
          volumeMounts:
            - name: vroom-profiles
              mountPath: /var/vroom/sentry-profiles
          resources:
            requests:
              cpu: 100m
              memory: 256Mi
            limits:
              cpu: 500m
              memory: 512Mi
      volumes:
        - name: vroom-profiles
          emptyDir: {}
---
