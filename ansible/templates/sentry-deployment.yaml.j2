# =============================================================================
# Sentry Kubernetes Deployments (v26.1.0)
# =============================================================================
# This file contains all Kubernetes resources for Sentry self-hosted.
# Images are from GHCR (ghcr.io/getsentry/*) since DockerHub no longer
# publishes versioned tags for sentry and symbolicator.
#
# Architecture changes from 24.x:
# - Celery worker/cron replaced by taskbroker + taskworker
# - Zookeeper removed - Kafka uses KRaft mode
# - ClickHouse upgraded to 25.3
# =============================================================================

# =============================================================================
# ConfigMap for Sentry Configuration
# =============================================================================
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: sentry-config
  namespace: {{ sentry_namespace }}
data:
  sentry.conf.py: |
    # This file is generated by Ansible
    # Based on official Sentry self-hosted sentry.conf.example.py (26.x)
    import os
    from sentry.conf.server import *  # noqa

    # =============================================================================
    # Secret Key (Required)
    # =============================================================================
    SENTRY_OPTIONS["system.secret-key"] = os.environ.get("SENTRY_SECRET_KEY", "")

    # =============================================================================
    # Database
    # =============================================================================
    DATABASES = {
        "default": {
            "ENGINE": "sentry.db.postgres",
            "NAME": "sentry",
            "USER": "sentry",
            "PASSWORD": os.environ.get("POSTGRES_PASSWORD", ""),
            "HOST": "sentry-postgres.{{ sentry_namespace }}.svc.cluster.local",
            "PORT": "5432",
        }
    }

    # =============================================================================
    # Redis Configuration
    # =============================================================================
    SENTRY_OPTIONS["redis.clusters"] = {
        "default": {
            "hosts": {
                0: {
                    "host": "sentry-redis.{{ sentry_namespace }}.svc.cluster.local",
                    "port": "6379",
                    "password": os.environ.get("REDIS_PASSWORD", ""),
                    "db": "0",
                }
            }
        }
    }

    # =============================================================================
    # Cache Configuration
    # =============================================================================
    SENTRY_CACHE = "sentry.cache.redis.RedisCache"
    SENTRY_CACHE_OPTIONS = {
        "cluster": "default",
    }

    # =============================================================================
    # Kafka Configuration
    # =============================================================================
    DEFAULT_KAFKA_OPTIONS = {
        "bootstrap.servers": "sentry-kafka.{{ sentry_namespace }}.svc.cluster.local:9092",
        "message.max.bytes": 50000000,
        "socket.timeout.ms": 1000,
    }
    SENTRY_EVENTSTREAM = "sentry.eventstream.kafka.KafkaEventStream"
    SENTRY_EVENTSTREAM_OPTIONS = {"producer_configuration": DEFAULT_KAFKA_OPTIONS}
    KAFKA_CLUSTERS["default"] = DEFAULT_KAFKA_OPTIONS

    # =============================================================================
    # Rate Limits
    # =============================================================================
    SENTRY_RATELIMITER = "sentry.ratelimits.redis.RedisRateLimiter"

    # =============================================================================
    # Update Buffers
    # =============================================================================
    SENTRY_BUFFER = "sentry.buffer.redis.RedisBuffer"

    # =============================================================================
    # Quotas
    # =============================================================================
    SENTRY_QUOTAS = "sentry.quotas.redis.RedisQuota"

    # =============================================================================
    # File Storage (for source maps, artifacts, etc.)
    # =============================================================================
    SENTRY_OPTIONS["filestore.backend"] = "filesystem"
    SENTRY_OPTIONS["filestore.options"] = {"location": "/data/files"}

    # =============================================================================
    # Snuba
    # =============================================================================
    SENTRY_SEARCH = "sentry.search.snuba.EventsDatasetSnubaSearchBackend"
    SENTRY_SEARCH_OPTIONS = {}
    SENTRY_TAGSTORE_OPTIONS = {}
    SENTRY_OPTIONS["snuba"] = "http://sentry-snuba-api.{{ sentry_namespace }}.svc.cluster.local:1218"

    # =============================================================================
    # Symbolicator (for source maps)
    # =============================================================================
    SENTRY_OPTIONS["symbolicator.enabled"] = True
    SENTRY_OPTIONS["symbolicator.options"] = {"url": "http://sentry-symbolicator.{{ sentry_namespace }}.svc.cluster.local:3021"}

    # =============================================================================
    # Vroom (profiling)
    # =============================================================================
    SENTRY_OPTIONS["vroom.vroom-url"] = "http://sentry-vroom.{{ sentry_namespace }}.svc.cluster.local:8085"

    # =============================================================================
    # Digests
    # =============================================================================
    SENTRY_DIGESTS = "sentry.digests.backends.redis.RedisBackend"

    # =============================================================================
    # TSDB (Time Series Database)
    # =============================================================================
    SENTRY_TSDB = "sentry.tsdb.redissnuba.RedisSnubaTSDB"
    SENTRY_TSDB_OPTIONS = {}

    # =============================================================================
    # Web Server
    # =============================================================================
    SENTRY_WEB_HOST = "0.0.0.0"
    SENTRY_WEB_PORT = 9000

    # =============================================================================
    # System Settings
    # =============================================================================
    SENTRY_SINGLE_ORGANIZATION = True
    SENTRY_OPTIONS["system.url-prefix"] = "https://{{ sentry_domain }}"
    SENTRY_OPTIONS["system.admin-email"] = "admin@academind.ir"

    # =============================================================================
    # Session Replay
    # =============================================================================
    SENTRY_OPTIONS["replay.storage.backend"] = "sentry.replays.usecases.pack.filesystem"

    # =============================================================================
    # Features
    # =============================================================================
    SENTRY_FEATURES["projects:sample-events"] = False
    SENTRY_FEATURES.update({
        feature: True for feature in (
            "organizations:discover",
            "organizations:global-views",
            "organizations:performance-view",
            "organizations:session-replay",
            "organizations:profiling",
            "organizations:profiling-view",
            "organizations:continuous-profiling",
        )
    })

    # =============================================================================
    # CSRF Configuration (required when behind reverse proxy/ingress)
    # =============================================================================
    CSRF_TRUSTED_ORIGINS = {{ sentry_csrf_trusted_origins | default(['https://' + sentry_domain]) | to_json }}
    CSRF_COOKIE_SECURE = True
    SESSION_COOKIE_SECURE = True

    # =============================================================================
    # Django ALLOWED_HOSTS and Proxy Configuration
    # =============================================================================
    ALLOWED_HOSTS = ["*"]  # Allow all hosts since we're behind ingress
    USE_X_FORWARDED_HOST = True
    SECURE_PROXY_SSL_HEADER = ("HTTP_X_FORWARDED_PROTO", "https")

    # =============================================================================
    # Disable internal SDK (Sentry reporting to itself)
    # =============================================================================
    SENTRY_SDK_CONFIG = {
        "dsn": "",
        "release": None,
        "environment": None,
    }

  config.yml: |
    # This file is generated by Ansible
    # Basic YAML configuration - most settings are in sentry.conf.py
    # Note: Options set here cannot be changed via the UI

    # System settings
    system.url-prefix: "https://{{ sentry_domain }}"
    system.admin-email: "admin@academind.ir"

    # Beacon (telemetry)
    beacon.anonymous: true

  relay-config.yml: |
    # Relay configuration
    relay:
      upstream: "http://sentry-web.{{ sentry_namespace }}.svc.cluster.local:9000/"
      mode: managed
      host: 0.0.0.0
      port: 3000

    processing:
      enabled: true
      kafka_config:
        - {name: "bootstrap.servers", value: "sentry-kafka.{{ sentry_namespace }}.svc.cluster.local:9092"}
      redis: "redis://:{{ sentry_redis_password }}@sentry-redis.{{ sentry_namespace }}.svc.cluster.local:6379"

    logging:
      level: INFO
      format: json

  symbolicator.yml: |
    # Symbolicator configuration
    cache_dir: /data/cache
    bind: 0.0.0.0:3021

    logging:
      level: info

    caches:
      downloaded:
        max_unused_for: 1w
        retry_misses_after: 5m
      derived:
        max_unused_for: 1w
        retry_misses_after: 5m
      diagnostics:
        retention: 1w

  clickhouse-users.xml: |
    <clickhouse>
      <users>
        <default>
          <password></password>
          <networks>
            <ip>::/0</ip>
          </networks>
          <profile>default</profile>
          <quota>default</quota>
          <access_management>1</access_management>
        </default>
      </users>
    </clickhouse>

# =============================================================================
# PostgreSQL
# =============================================================================
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: sentry-postgres
  namespace: {{ sentry_namespace }}
  labels:
    app: sentry-postgres
    app.kubernetes.io/part-of: sentry
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sentry-postgres
  template:
    metadata:
      labels:
        app: sentry-postgres
    spec:
      containers:
        - name: postgres
          image: postgres:15-alpine
          env:
            - name: POSTGRES_USER
              value: "sentry"
            - name: POSTGRES_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: sentry-secrets
                  key: postgres-password
            - name: POSTGRES_DB
              value: "sentry"
            - name: PGDATA
              value: "/var/lib/postgresql/data/pgdata"
          ports:
            - containerPort: 5432
          volumeMounts:
            - name: postgres-data
              mountPath: /var/lib/postgresql/data
          resources:
            requests:
              cpu: 200m
              memory: 512Mi
            limits:
              cpu: 1000m
              memory: 1Gi
          readinessProbe:
            exec:
              command: ["pg_isready", "-U", "sentry"]
            initialDelaySeconds: 5
            periodSeconds: 10
      volumes:
        - name: postgres-data
          persistentVolumeClaim:
            claimName: sentry-postgres-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: sentry-postgres
  namespace: {{ sentry_namespace }}
spec:
  selector:
    app: sentry-postgres
  ports:
    - port: 5432
      targetPort: 5432

