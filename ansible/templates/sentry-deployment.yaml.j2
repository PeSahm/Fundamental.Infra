# =============================================================================
# Sentry Kubernetes Deployments
# =============================================================================
# This file contains all Kubernetes resources for Sentry self-hosted
# =============================================================================

# =============================================================================
# PostgreSQL
# =============================================================================
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: sentry-postgres
  namespace: {{ sentry_namespace }}
  labels:
    app: sentry-postgres
    app.kubernetes.io/part-of: sentry
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sentry-postgres
  template:
    metadata:
      labels:
        app: sentry-postgres
    spec:
      containers:
        - name: postgres
          image: postgres:15-alpine
          env:
            - name: POSTGRES_USER
              value: "sentry"
            - name: POSTGRES_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: sentry-secrets
                  key: postgres-password
            - name: POSTGRES_DB
              value: "sentry"
            - name: PGDATA
              value: "/var/lib/postgresql/data/pgdata"
          ports:
            - containerPort: 5432
          volumeMounts:
            - name: postgres-data
              mountPath: /var/lib/postgresql/data
          resources:
            requests:
              cpu: 200m
              memory: 512Mi
            limits:
              cpu: 1000m
              memory: 1Gi
          readinessProbe:
            exec:
              command: ["pg_isready", "-U", "sentry"]
            initialDelaySeconds: 5
            periodSeconds: 10
      volumes:
        - name: postgres-data
          persistentVolumeClaim:
            claimName: sentry-postgres-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: sentry-postgres
  namespace: {{ sentry_namespace }}
spec:
  selector:
    app: sentry-postgres
  ports:
    - port: 5432
      targetPort: 5432

