        - name: wait-for-clickhouse
          image: busybox:1.36
          command: ['sh', '-c', 'until nc -z sentry-clickhouse 9000; do echo "Waiting for ClickHouse..."; sleep 5; done']
        - name: wait-for-kafka
          image: busybox:1.36
          command: ['sh', '-c', 'until nc -z sentry-kafka 9092; do echo "Waiting for Kafka..."; sleep 5; done']
      containers:
        - name: snuba-migrations
          image: {{ sentry_image_registry }}/snuba:{{ sentry_version }}
          command: ["snuba", "migrations", "migrate", "--force"]
          env:
            - name: SNUBA_SETTINGS
              value: self_hosted
            - name: CLICKHOUSE_HOST
              value: sentry-clickhouse
            - name: DEFAULT_BROKERS
              value: sentry-kafka:9092
          resources:
            requests:
              cpu: 100m
              memory: 256Mi
            limits:
              cpu: 500m
              memory: 512Mi

# =============================================================================
# Ingress
# =============================================================================
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: sentry-ingress
  namespace: {{ sentry_namespace }}
  annotations:
    cert-manager.io/cluster-issuer: "letsencrypt-prod"
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
    nginx.ingress.kubernetes.io/proxy-body-size: "100m"
    nginx.ingress.kubernetes.io/proxy-read-timeout: "300"
    nginx.ingress.kubernetes.io/proxy-send-timeout: "300"
    nginx.ingress.kubernetes.io/use-regex: "true"
spec:
  ingressClassName: public
  tls:
    - hosts:
        - {{ sentry_domain }}
      secretName: sentry-tls
  rules:
    - host: {{ sentry_domain }}
      http:
        paths:
          # SDK event ingestion - route to Relay
          - path: /api/[1-9][0-9]*/envelope
            pathType: ImplementationSpecific
            backend:
              service:
                name: sentry-relay
                port:
                  number: 3000
          - path: /api/[1-9][0-9]*/store
            pathType: ImplementationSpecific
            backend:
              service:
                name: sentry-relay
                port:
                  number: 3000
          - path: /api/[1-9][0-9]*/security
            pathType: ImplementationSpecific
            backend:
              service:
                name: sentry-relay
                port:
                  number: 3000
          - path: /api/[1-9][0-9]*/minidump
            pathType: ImplementationSpecific
            backend:
              service:
                name: sentry-relay
                port:
                  number: 3000
          - path: /api/[1-9][0-9]*/unreal
            pathType: ImplementationSpecific
            backend:
              service:
                name: sentry-relay
                port:
                  number: 3000
          - path: /api/[1-9][0-9]*/cron
            pathType: ImplementationSpecific
            backend:
              service:
                name: sentry-relay
                port:
                  number: 3000
          # Everything else goes to sentry-web (Web UI, /api/0/*, static files)
          - path: /
            pathType: Prefix
            backend:
              service:
                name: sentry-web
                port:
                  number: 9000
